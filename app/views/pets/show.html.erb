<div class="container">
  <h1><%= @pet.name %></h1>
</div>

<div class="container">
  <div class="row">
  <div id= "pet-info">
    <%= cl_image_tag @pet.photo, width: 240 %>
    <h2><%= @pet.details %></h2>
    <% if current_user != @pet.owner %>
    <%= link_to 'Book!', new_pet_booking_path(@pet) %>
    <% end %>
  </div>
  <div
  id="map"
  style="width: 45%;
  height: 300px;"
  data-markers="<%= @marker.to_json %>"
  ></div>
</div>
</div>
