<%= render 'shared/flashes' %>
<div class="container">
  <div class="profile text-center">
    <div class="main rounded">
      <div class="main-content">
        <%= cl_image_tag @pet.photo, id: 'pet-image' %>
        <h2><%= @pet.name %></h2>
        <p><%= @pet.species %></p>
        <% if current_user != @pet.owner %>
          <%= link_to 'Book!', new_pet_booking_path(@pet), class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
    <div class="stat rounded">
      <div class="stat-content">
        <h3>Details:</h3>
        <h4><%= @pet.bookings.select { |booking| booking.status == 'accepted'}.count %></h4>
        <p>Previous bookings</p>
        <h4><%= @pet.bookings.select { |booking| !booking.review.nil? }.count %></h4>
        <p>Reviews</p>
      </div>
    </div>
    <div class="map rounded">
      <div id="map" style="width: 100%; height: 100%; min-height: 200px;"
      data-markers="<%= @marker.to_json %>"
      ></div>
    </div>
    <div class="description rounded">
      <div class="description-content">
        <h3>All about <%= @pet.name %>:</h3>
        <p><%= @pet.details %></p>
      </div>
    </div>
  </div>
</div>
</div>
